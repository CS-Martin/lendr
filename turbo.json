{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "dev": {
            "persistent": true,
            "cache": false
        },
        "lint": {
            "dependsOn": ["^lint"],
            "outputs": [".next/**", "!.next/cache/**"]
        }
    }
}
