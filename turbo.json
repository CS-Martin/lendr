{
    "$schema": "https://turborepo.com/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**"]
        },
        "dev": {
            "persistent": true,
            "cache": false,
            "env": [
                "NEXTAUTH_URL",
                "NEXTAUTH_SECRET",
                "NODE_ENV",
                "API_BASE_URL",
                "API_VERSION"
            ]
        },
        "lint": {
            "dependsOn": ["^lint"],
            "env": [
                "NEXTAUTH_URL",
                "NEXTAUTH_SECRET",
                "NODE_ENV",
                "API_BASE_URL",
                "API_VERSION"
            ]
        },
        "format": {
            "dependsOn": ["^format"]
        }
    }
}
