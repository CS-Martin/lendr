{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "cache": true
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "format": {
        "persistent": false,
        "cache": true
    },
    "lint": {
      "persistent": false,
      "cache": true
    }
  }
}
